<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen60"
    android:background="@color/main_color"
    tools:context=".RouletteActivity">

    <rubikstudio.library.LuckyWheelView
        android:id="@+id/luckyWheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:lkwBackgroundColor="#FF9800"
        app:lkwCenterImage="@drawable/wheel2"
        app:lkwCursor="@drawable/ic_cursor"
        app:lkwTopTextColor="#263238" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play"
        android:layout_width="@dimen/dimen250"
        android:layout_height="wrap_content"
        android:layout_below="@id/luckyWheel"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginBottom="@dimen/dimen40"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/lovelo_black"
        android:text="cari pemain"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/dimen50" />

    <ImageView
        android:id="@+id/img_truth"
        android:layout_width="@dimen/dimen160"
        android:layout_height="@dimen/dimen120"
        android:src="@drawable/truth"
        android:layout_below="@id/play"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen30"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_dare"
        android:layout_width="@dimen/dimen160"
        android:layout_height="@dimen/dimen120"
        android:src="@drawable/dare"
        android:layout_below="@id/play"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen30"
        android:visibility="gone"/>

